<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
	
	<bean id="person" class="spring.model.Person">
		<constructor-arg value="777" type="int" name="id"></constructor-arg>
		<constructor-arg value="Susan7" type="String" name="name"></constructor-arg>
	</bean>
	
	<bean name="personRepository" class="spring.repository.personRepositoryImpl"></bean>
	

	<!-- Setter injection 
	<property name="personRepo" ref="personRepository"></property>
	name="personRepo" là private personRepository<Person> personRepo được khai báo bên personServiceImpl
	ref="personRepository" là <bean name="personRepository" class="spring.repository.personRepositoryImpl"></bean>
	-->
	<bean id="personService" class="spring.service.personServiceImpl">
		<property name="personRepo" ref="personRepository"></property>
	</bean>
	
	
	
	<!-- <bean id="personService" class="spring.service.personServiceImpl"></bean> -->
	
</beans>
